    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   >

    <Color x:Key="AQColorTransparent">#00000000</Color>

    <SolidColorBrush x:Key="AQForeground" Color="{DynamicResource App.TextOnAccent}" />
    <SolidColorBrush x:Key="AQForegroundBlack" Color="{DynamicResource App.Text}" />
    <SolidColorBrush x:Key="AQBorderBrushTransparent" Color="{StaticResource AQColorTransparent}" />

    <!--  Blue  -->
    <SolidColorBrush x:Key="AQBackgroundNormal" Color="{DynamicResource App.Accent}" />
    <SolidColorBrush x:Key="AQBackgroundPressed" Color="{DynamicResource App.AccentPressed}" />
    <SolidColorBrush x:Key="AQBackgroundMouseOver" Color="{DynamicResource App.AccentHover}" />
    <SolidColorBrush x:Key="AQBackgroundEnabled" Color="{DynamicResource App.AccentDisabled}" />

    <Style x:Key="AQButtonBlue" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AQBackgroundNormal}" />
        <Setter Property="BorderBrush" Value="{StaticResource AQBorderBrushTransparent}" />
        <Setter Property="Foreground" Value="{StaticResource AQForeground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AQBackgroundMouseOver}" />
                            <Setter Property="BorderBrush" Value="{StaticResource AQBorderBrushTransparent}" />
                        </Trigger>-->

                        <Trigger Property="IsMouseOver" Value="true">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            AutoReverse="False"
                                            FillBehavior="HoldEnd"
                                            RepeatBehavior="1x"
                                            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                            To="{StaticResource App.AccentHover}"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            AutoReverse="False"
                                            FillBehavior="HoldEnd"
                                            RepeatBehavior="1x"
                                            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AQBackgroundPressed}" />
                            <Setter Property="BorderBrush" Value="{StaticResource AQBorderBrushTransparent}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource AQBackgroundEnabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

