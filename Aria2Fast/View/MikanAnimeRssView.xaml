<Page
    x:Class="Aria2Fast.View.MikanAnimeRssView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contver="clr-namespace:Aria2Fast.View.Contver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aria2Fast.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MikanAnimeRssView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    TextElement.Foreground="{DynamicResource App.TextPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <contver:SubscriptionToColorConverter x:Key="SubscriptionToColorConverter" />
        <contver:WidthMinusConverter x:Key="WidthMinusConverter" />
        <contver:SubscriptionToColorConverterWithTitle x:Key="SubscriptionToColorConverterWithTitle" />
        <contver:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
        <contver:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <contver:EmptyStringVisibilityConverter x:Key="EmptyStringVisibilityConverter" />

        <Style x:Key="AutoHideScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <ScrollContentPresenter />
                            <ScrollBar
                                x:Name="PART_VerticalScrollBar"
                                HorizontalAlignment="Right"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                Opacity="0"
                                Orientation="Vertical"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                Value="{TemplateBinding VerticalOffset}" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="PART_VerticalScrollBar"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="PART_VerticalScrollBar"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0"
                                                Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <StackPanel
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="6">
                    <Image
                        x:Name="AnimeImage"
                        Width="160"
                        Height="230"
                        HorizontalAlignment="Left"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="{Binding ImageCache}"
                        Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry
                                RadiusX="6"
                                RadiusY="6"
                                Rect="0,0,160,230" />
                        </Image.Clip>
                    </Image>
                </Border>

                <Grid Grid.Column="1" Margin="14,0,10,0" Height="{Binding ActualHeight, ElementName=AnimeImage}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="17"
                        FontWeight="Bold"
                        Text="{Binding Name}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />

                    <Grid Grid.Row="1">
                        <Grid
                            Visibility="{Binding BestSummary, Converter={StaticResource StringVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollViewer
                                Grid.Row="0"
                                Margin="0,8,0,0"
                                Style="{StaticResource AutoHideScrollViewer}"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled">
                                <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    Text="{Binding BestSummary}"
                                    TextWrapping="Wrap" />

                                    <!-- TMDB 评分信息 -->
                                    <StackPanel
                                        Margin="0,10,0,0"
                                        Orientation="Horizontal"
                                        Visibility="{Binding TmdbInfo, Converter={StaticResource BoolVisibilityConverter}}">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource App.StateWarningBrush}"
                                            Text="★" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Text="{Binding TmdbInfo.VoteAverage, StringFormat={}{0:F1}}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="11"
                                            Opacity="0.7"
                                            Text="{Binding TmdbInfo.VoteCount, StringFormat=({0} 评价)}" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>

                            <Border
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                Padding="10"
                                Background="{DynamicResource App.CardBackgroundElevatedBrush}"
                                BorderBrush="{DynamicResource App.SeparatorBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Visibility="{Binding AiReviewText, Converter={StaticResource StringVisibilityConverter}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontWeight="Bold" Text="AI简评" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource App.BadgeAIBrush}"
                                            Text="{Binding AiReviewScore, StringFormat=评分 {0:F1}/10}" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="0,6,0,0"
                                        FontSize="12"
                                        Opacity="0.9"
                                        Text="{Binding AiReviewText}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <StackPanel
                            Visibility="{Binding BestSummary, Converter={StaticResource EmptyStringVisibilityConverter}}">
                            <StackPanel
                                Margin="0,8,0,0"
                                Orientation="Horizontal"
                                Visibility="{Binding TmdbInfo, Converter={StaticResource BoolVisibilityConverter}}">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource App.StateWarningBrush}"
                                    Text="★" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Text="{Binding TmdbInfo.VoteAverage, StringFormat={}{0:F1}}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="{Binding TmdbInfo.VoteCount, StringFormat=({0} 评价)}" />
                            </StackPanel>

                            <Border
                                Margin="0,10,0,0"
                                Padding="10"
                                Background="{DynamicResource App.CardBackgroundElevatedBrush}"
                                BorderBrush="{DynamicResource App.SeparatorBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Visibility="{Binding AiReviewText, Converter={StaticResource StringVisibilityConverter}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontWeight="Bold" Text="AI简评" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource App.BadgeAIBrush}"
                                            Text="{Binding AiReviewScore, StringFormat=评分 {0:F1}/10}" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="0,6,0,0"
                                        FontSize="12"
                                        Opacity="0.9"
                                        Text="{Binding AiReviewText}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <ItemsControl Margin="-5,5,0,0" ItemsSource="{Binding Rss}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            Background="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverter}}"
                            CornerRadius="6"
                            MouseLeftButtonUp="Border_MouseLeftButtonUp">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Text="{Binding Name}" />
                                    <ui:SymbolIcon
                                        Margin="5,0,0,0"
                                        Filled="True"
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Symbol="Star16"
                                        Visibility="{Binding IsSubscribed, Converter={StaticResource BoolVisibilityConverter}}" />
                                </StackPanel>

                                <TextBlock
                                    Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                    Opacity="0.7"
                                    Text="{Binding UpdateTime}" />
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Opacity="0.7"
                                        Text="{Binding ShowEpisode}" />
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </StackPanel>



    </Grid>
</Page>
