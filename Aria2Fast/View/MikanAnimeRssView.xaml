<Page
    x:Class="Aria2Fast.View.MikanAnimeRssView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contver="clr-namespace:Aria2Fast.View.Contver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aria2Fast.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MikanAnimeRssView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <contver:SubscriptionToColorConverter x:Key="SubscriptionToColorConverter" />
        <contver:WidthMinusConverter x:Key="WidthMinusConverter" />
        <contver:SubscriptionToColorConverterWithTitle x:Key="SubscriptionToColorConverterWithTitle" />
        <contver:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />

        <Style x:Key="AutoHideScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <ScrollContentPresenter />
                            <ScrollBar
                                x:Name="PART_VerticalScrollBar"
                                HorizontalAlignment="Right"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                Opacity="0"
                                Orientation="Vertical"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                Value="{TemplateBinding VerticalOffset}" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="PART_VerticalScrollBar"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="PART_VerticalScrollBar"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0"
                                                Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <StackPanel
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="6">
                    <Image
                        x:Name="AnimeImage"
                        Width="140"
                        Height="200"
                        HorizontalAlignment="Left"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="{Binding ImageCache}"
                        Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry
                                RadiusX="6"
                                RadiusY="6"
                                Rect="0,0,140,200" />
                        </Image.Clip>
                    </Image>
                </Border>

                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="{Binding Name}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />

                    <ScrollViewer
                        Margin="0,10,0,0"
                        MaxHeight="{Binding ActualHeight, ElementName=AnimeImage}"
                        Style="{StaticResource AutoHideScrollViewer}"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock
                                FontSize="13"
                                Text="{Binding BestSummary}"
                                TextWrapping="Wrap" />

                            <!-- TMDB 评分信息 -->
                            <StackPanel
                                Margin="0,10,0,0"
                                Orientation="Horizontal"
                                Visibility="{Binding TmdbInfo, Converter={StaticResource BoolVisibilityConverter}}">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="#FFD700"
                                    Text="★" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Text="{Binding TmdbInfo.VoteAverage, StringFormat={}{0:F1}}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="{Binding TmdbInfo.VoteCount, StringFormat=({0} 评价)}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <ItemsControl Margin="-5,5,0,0" ItemsSource="{Binding Rss}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            Background="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverter}}"
                            CornerRadius="6"
                            MouseLeftButtonUp="Border_MouseLeftButtonUp">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Text="{Binding Name}" />
                                    <ui:SymbolIcon
                                        Margin="5,0,0,0"
                                        Filled="True"
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Symbol="Star16"
                                        Visibility="{Binding IsSubscribed, Converter={StaticResource BoolVisibilityConverter}}" />
                                </StackPanel>

                                <TextBlock
                                    Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                    Opacity="0.7"
                                    Text="{Binding UpdateTime}" />
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Foreground="{Binding IsSubscribed, Converter={StaticResource SubscriptionToColorConverterWithTitle}}"
                                        Opacity="0.7"
                                        Text="{Binding ShowEpisode}" />
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </StackPanel>



    </Grid>
</Page>
