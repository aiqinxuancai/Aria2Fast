<Page
    x:Class="Aria2Fast.View.Aria2FastSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Aria2Fast.View.Contver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aria2Fast.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:Aria2Fast.Service"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:utils="clr-namespace:Aria2Fast.Utils"
    xmlns:wpfutils="clr-namespace:Aria2Fast.Utils"
    Title="Aria2FastSetting"
    d:DesignHeight="1500"
    d:DesignWidth="800"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">


    <Page.Resources>
        <converter:NegationConverter x:Key="NegationConverter" />
        <converter:IsSelectedAria2NodeConverter x:Key="IsSelectedAria2NodeConverter" />
    </Page.Resources>


    <Grid>
        <ScrollViewer>
            <StackPanel Margin="10,10,6,6">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="28"
                    Text="设置" />
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <TextBlock
                        x:Name="HomePageTextBlock"
                        VerticalAlignment="Center"
                        Foreground="#FF006ABE"
                        MouseLeftButtonDown="HomePageTextBlock_MouseLeftButtonDown"
                        Text="Aria2Fast" />
                    <TextBlock VerticalAlignment="Center" Text=" 当前版本" />
                    <TextBlock Margin="2,0,0,0" Text="{Binding Source={x:Static utils:ActionVersion.Version}}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="最新版本" />
                    <TextBlock
                        x:Name="BadgeNewVersion"
                        Margin="2,0,0,0"
                        Foreground="#FF006ABE"
                        MouseLeftButtonDown="BadgeNewVersion_MouseLeftButtonDown"
                        Text="{Binding Source={x:Static utils:ActionVersion.NowGithubVersion}}" />
                </StackPanel>




                <StackPanel Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="基础设置" />

                        <ui:Card x:Name="AccountCardAction" Margin="0,10,0,0">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <ui:ToggleSwitch
                                                Grid.Column="1"
                                                Content="使用Aria2本机下载"
                                                IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.Aria2UseLocal}" />

                                            <TextBlock
                                                Margin="10,1,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="13"
                                                Foreground="#99000000"
                                                Text="关闭后可填写远程RPC地址" />

                                        </StackPanel>

                                    </StackPanel>


                                </Grid>
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="远程Aria2列表" />
                                        <ui:ListView Margin="0,5,0,0" ItemsSource="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.RemoteAria2Nodes}">
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListViewItem">
                                                                <Border
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ContentPresenter />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ui:ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="180" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>


                                                        <Ellipse
                                                            Grid.Column="0"
                                                            Width="10"
                                                            Height="10"
                                                            VerticalAlignment="Center"
                                                            Fill="Transparent"
                                                            Stroke="#20000000"
                                                            StrokeThickness="1" />

                                                        <Ellipse
                                                            Grid.Column="0"
                                                            Width="10"
                                                            Height="10"
                                                            VerticalAlignment="Center"
                                                            Fill="#2DB7F5">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Converter={StaticResource IsSelectedAria2NodeConverter}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>


                                                        <ui:TextBox
                                                            Grid.Column="1"
                                                            Margin="5,0,0,0"
                                                            Text="{Binding URL, UpdateSourceTrigger=PropertyChanged}" />
                                                        <ui:PasswordBox
                                                            Grid.Column="2"
                                                            Margin="5,0,0,0"
                                                            wpfutils:PasswordBoxAssistant.BindPassword="True"
                                                            wpfutils:PasswordBoxAssistant.BoundPassword="{Binding Token, Mode=TwoWay}" />


                                                        <StackPanel
                                                            Grid.Column="3"
                                                            VerticalAlignment="Center"
                                                            Orientation="Horizontal">
                                                            <Button
                                                                Margin="5,0,0,0"
                                                                Click="ApplyRemoteAria2_Click"
                                                                CommandParameter="{Binding}"
                                                                Content="使用" />
                                                            <Button
                                                                Margin="5,0,0,0"
                                                                Click="RemoveRemoteAria2_Click"
                                                                CommandParameter="{Binding}"
                                                                Content="删除" />
                                                        </StackPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ui:ListView.ItemTemplate>
                                        </ui:ListView>
                                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                            <Button Click="AddRemoteAria2_Click" Content="新增" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </ui:Card>
                    </StackPanel>
                </StackPanel>

                <ui:Card Margin="0,10,0,0">
                    <Grid>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ui:ToggleSwitch
                                    Grid.Column="1"
                                    Content="使用PushDeer推送任务完成"
                                    IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.PushDeerOpen}" />
                            </StackPanel>

                            <ui:TextBox
                                Height="32"
                                MinWidth="400"
                                Margin="0,10,0,0"
                                PlaceholderText="PushDeerKey"
                                Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.PushDeerKey}" />
                        </StackPanel>


                    </Grid>
                </ui:Card>

                <ui:Card Margin="0,10,0,0">
                    <Grid>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ui:ToggleSwitch
                                    Grid.Column="1"
                                    Content="使用代理访问订阅"
                                    IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.SubscriptionProxyOpen}" />
                            </StackPanel>

                            <ui:TextBox
                                Height="32"
                                MinWidth="400"
                                Margin="0,10,0,0"
                                PlaceholderText="http://127.0.0.1:1080"
                                Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.SubscriptionProxy}" />
                        </StackPanel>


                    </Grid>

                </ui:Card>
                <TextBlock
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Text="实验功能" />
                <ui:Card Margin="0,10,0,0">
                    <Grid>
                        <StackPanel>
                            <ui:ToggleSwitch
                                Grid.Column="1"
                                Content="使用AI来提取剧集名称"
                                IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAIOpen}" />
                            <ui:ToggleSwitch
                                Margin="0,6,0,0"
                                Grid.Column="1"
                                Content="使用AI翻译动漫简介"
                                IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAISummaryTranslateOpen}" />
                        </StackPanel>
                    </Grid>

                </ui:Card>

                <TextBlock
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Text="AI配置" />

                <ui:Card x:Name="card" Margin="0,10,0,0">

                    <Grid>

                        <StackPanel Height="{Binding ActualWidth, ElementName=card, Mode=OneWay}">
                            <StackPanel>
                                <TextBlock Text="模型名" />
                                <ui:TextBox
                                    Height="32"
                                    Margin="0,5,0,0"
                                    Padding="10,5,10,5"
                                    PlaceholderText="模型名"
                                    Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAIModelName}" />
                            </StackPanel>


                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="API秘钥" />
                                <ui:TextBox
                                    Height="32"
                                    MinWidth="400"
                                    Margin="0,5,0,0"
                                    Padding="10,5,10,5"
                                    PlaceholderText="API Key"
                                    Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAIKey}" />
                            </StackPanel>



                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="API地址" />
                                <ui:TextBox
                                    Height="32"
                                    MinWidth="400"
                                    Margin="0,5,0,0"
                                    Padding="10,5,10,5"
                                    PlaceholderText="例子：https://aihubmix.com"
                                    Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAIHost}" />

                            </StackPanel>

                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="HTTP代理地址（可选，）" />
                                <ui:TextBox
                                    Height="32"
                                    MinWidth="400"
                                    Margin="0,5,0,0"
                                    Padding="10,5,10,5"
                                    PlaceholderText="例子：http://127.0.0.1:1080"
                                    Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OpenAIProxy}" />

                            </StackPanel>

                            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="推荐转发站点：" />
                                <ui:HyperlinkButton Click="LinkAIKEYAIHUBMIX_Click" Content="aihubmix.com" />
                            </StackPanel>
                        </StackPanel>



                    </Grid>

                </ui:Card>
                <StackPanel Margin="0,10,0,0" />

                <!--<StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <CheckBox Content="订阅列表同步到阿里云OSS（未实现）" IsChecked="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OSSSynchronizeOpen}" ></CheckBox>
                </StackPanel>

                <StackPanel Margin="0,10,0,0" >
                    <Label Content="阿里云OSS-Endpoint"></Label>
                    <StackPanel>
                        <ui:TextBox Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OSSEndpoint}" Cursor="IBeam" PlaceholderText="https://oss-cn-hangzhou.aliyuncs.com"  ></ui:TextBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,5,0,0" >
                    <Label Content="阿里云OSS-Bucket"></Label>
                    <StackPanel>
                        <ui:TextBox Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OSSBucket}"></ui:TextBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,5,0,0" >
                    <Label Content="阿里云OSS-AccessKey ID" ></Label>
                    <StackPanel>
                        <ui:TextBox Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OSSAccessKeyId}"></ui:TextBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,5,0,0" >
                    <Label Content="阿里云OSS-AccessKey Secret"></Label>
                    <StackPanel>
                        <ui:TextBox Text="{Binding Source={x:Static service:AppConfig.Instance}, Path=ConfigData.OSSAccessKeySecret}"></ui:TextBox>
                    </StackPanel>
                </StackPanel>-->


            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
