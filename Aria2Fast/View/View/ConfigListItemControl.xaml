<UserControl
    x:Class="Aria2Fast.View.View.ConfigListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Aria2Fast.View.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="44"
    d:DesignHeight="50"
    d:DesignWidth="300"
    TextElement.Foreground="{DynamicResource App.TextPrimaryBrush}"
    mc:Ignorable="d">


    <Grid>
        <Border CornerRadius="10">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}" Value="True">
                            <Setter Property="Background" Value="{DynamicResource App.OverlayMaskBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <StackPanel
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image Width="16" Source="/Assets/Images/heart26.png" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding Title}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource App.TextSecondaryBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!--  two way  -->
                </StackPanel>
            </Grid>

        </Border>


    </Grid>
</UserControl>
